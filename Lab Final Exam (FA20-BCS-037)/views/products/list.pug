extends ../layout

block content
    br
    br
    .row
        .col-sm-8
            h1=title
        .col-sm-4
            a(href="/products/add", class="btn btn-success float-right") Add New Record
    table.table
        thead
            tr
                th Diastolic
                th Systolic
                th Time
                th Actions
        tbody
            each product in products
                tr
                    td= product.DIASTOLIC
                    td= product.SYSTOLIC
                    td= product.time
                    td
                        a(href="/products/delete/"+product._id, class="btn btn-danger") Delete
                        //- a(href="/products/edit/"+product._id, class="btn btn-warning") Edit